generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id

  status Status @default(REGULAR)
  Tag    Tag[]

  @@map("users")
}

model Guild {
  id String @unique

  status Status @default(REGULAR)
  tags   Tag[]

  @@map("guilds")
}

model Tag {
  id      Int     @id @default(autoincrement())
  guild   Guild?  @relation(fields: [guildId], references: [id])
  guildId String?

  name    String
  content String
  author  User   @relation(fields: [userId], references: [id])
  userId  String

  @@index([guildId])
  @@index([userId])
  @@map("tags")
}

enum Status {
  REGULAR
  PREMIUM
  STAR
}
