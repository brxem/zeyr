{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"verbatimModuleSyntax": false,
		"skipLibCheck": true,
		"declarationMap": false,
		"declaration": false
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}